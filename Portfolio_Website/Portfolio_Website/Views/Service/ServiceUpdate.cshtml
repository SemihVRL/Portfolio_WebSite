<br />
<br />
@using (Html.BeginForm("ServiceUpdate", "Service", FormMethod.Post))
{
    <div>
        @Html.LabelFor(x => x.ServiceID)
        @Html.TextBoxFor(x => x.ServiceID, new { @class = "form-control", @readonly = "readonly" })

    </div>



    <div>
        <label>TITLE</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", })

    </div>

    <div>
        <label>ımage</label>
