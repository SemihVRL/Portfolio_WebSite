@using EntityLayer.Concrete
@model List<School>

<div class="section px-3 px-lg-4 pt-5" id="school">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Eğitim Hayatım</h2>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
                
            
            <div class="col-md-6">
                <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
                    <div class="card-header px-3 py-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3 class="h5 mb-1">@x.Name</h3>
                                <div class="text-muted text-small" style="font-weight:bold">@x.Section  -  <small> @x.Date</small></div>
                                </div><img src="@x.Image" width="48" height="48" alt="ui-ux" />
                        </div>
                    </div>
                   
                </div>
            </div>
            }

        </div>
    </div>
</div>