@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "AboutUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="color:white;font-weight:bold;text-align:center;margin-top:20px;">About Update Alanı</h2>
<br />
<br />
@using (Html.BeginForm("AboutUpdate", "About", FormMethod.Post))
{
    <div>
        @Html.LabelFor(x => x.AboutID)
