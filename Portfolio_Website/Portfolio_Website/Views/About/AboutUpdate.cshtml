    </div>



    <div>
        <label>TITLE</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", })

    </div>

    <div>
        <label>DESCRİPTİON</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", })

    </div>

    <div>
        <label>AGE</label>
        @Html.TextBoxFor(x => x.Age, new { @class = "form-control", })

    </div>

     <div>
        <label>MAİL</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", })

    </div>
    <div>
        <label>PHONE</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", })

    </div>

    <div>
        <label>ADRESS</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", })

    </div>
    <div>
        <label>ADRESS</label>
        @Html.TextBoxFor(x => x.SocialMedia, new { @class = "form-control", })

    </div>

    <div>
        <label>ADRESS</label>
        @Html.TextBoxFor(x => x.Status, new { @class = "form-control", })

    </div>

