@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "AboutIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="color:white;font-weight:bold;text-align:center;margin-top:20px;">About Alanı</h2>
<br />
<style>

    .table-fixed {
        width: 100%;
        table-layout: fixed; /* Tablo hücrelerinin genişliğini sabitler */
        border-collapse: collapse; /* Kenarlıkları birleştirir */
    }

        .table-fixed th, .table-fixed td {
            border: 1px solid #ddd; /* Kenarlık rengi ve kalınlığı */
            padding: 8px; /* Hücre içi boşluk */
            word-wrap: break-word; /* Uzun kelimelerin bir sonraki satıra geçmesini sağlar */
            overflow: hidden; /* Taşan metni gizler */
            text-overflow: ellipsis; /* Taşan metnin sonuna üç nokta ekler */
        }

        .table-fixed th {
            background-color: #f2f2f2; /* Başlık hücreleri için arka plan rengi */
        }

        .table-fixed td.description {
            max-width: 200px; /* Description alanı için istediğin genişliği ayarla */
            white-space: nowrap; /* Metnin tek satırda kalmasını sağlar */
        }


</style>


<table class="table-fixed">
    <tr>
        <th>ID</th>
        <th>TITLE</th>
        <th class="description">DESCRIPTION</th>
        <th>AGE</th>
        <th>MAİL</th>
        <th>PHONE</th>
        <th>ADRESS</th>
        <th>DURUM</th>
        <th>SOSYAL MEDYA</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AboutID</td>
                <td>@x.Title</td>
                <td class="description">@x.Description</td>
                <td>@x.Age</td>
                <td>@x.Mail</td>
                <td>@x.Phone</td>
                <td>@x.Address</td>
                <td>@x.Status</td>
                <td>@x.SocialMedia</td>
                <td>
                    <a href="/About/AboutUpdate/@x.AboutID" class="btn btn-success">GÜNCELLE</a>
                </td>
                <td>
                    <a href="/About/AboutDelete/@x.AboutID" class="btn btn-danger">SİL</a>
                </td>
            </tr>
        }
    </tbody>
</table>


